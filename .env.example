# AI API Keys (get these from the respective providers)
VITE_API_ENDPOINT=/api/ai

# For production deployment (server-side)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Voice and Communication
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
DAILY_API_KEY=your_daily_api_key_here

# TTS Provider Selection
# Options: 'elevenlabs' (default/primary) or 'google' (backup/testing)
# Google uses Gemini native TTS (gemini-2.5-flash-preview-tts) with your existing Google API keys
TTS_PROVIDER=elevenlabs

# Production Deployment Settings
PORT=3001
NODE_ENV=development
GAME_PASSWORD=keepthefuturehuman
FRONTEND_URL=http://localhost:5173

# Frontend configuration (set in Lovable environment variables)
# Use https:// as base URL - will auto-convert to wss:// for WebSocket connections
# Example: VITE_BACKEND_URL=https://reverse-turing-backend-271123520248.us-central1.run.app
# Note: Do NOT use wss:// directly, use https:// and the code will convert it automatically
# VITE_REQUIRE_AUTH=true

# For GCloud Run deployment, set these via Secret Manager:
# GAME_PASSWORD=keepthefuturehuman
# FRONTEND_URL=https://your-lovable-frontend.lovable.app
# GOOGLE_API_KEY=your_actual_gemini_key
# ELEVENLABS_API_KEY=your_actual_elevenlabs_key